<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <section>

        <% booksData.forEach(book =>{ %>
       
            <img src="<%=book.img_url%>" alt="no" srcset=""> 
            <p><%= book.auther%></p>
            <p><%= book.title %></p>
            <p><%= book.description %></p>
            <form action="/addtoDB" method="POST">
                <input type="text" name="img_url" id="" value="<%= book.img_url%>">
                <input type="text" name="auther" id="" value="<%= book.auther%>">
                <input type="text" name="title" value="<%= book.title%>" id="">
                <textarea name="description" id="" cols="30" rows="10" ><%=book.description%></textarea>
                <input type="submit" value="add">
            </form>
        <%});%>
    </section>
</body>
</html>